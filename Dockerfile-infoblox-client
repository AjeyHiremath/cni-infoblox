FROM golang:1.7-alpine as builder

RUN apk --update add --no-cache --virtual .build-deps \
    gcc libc-dev linux-headers

ENV SRC=/go/src/github.com/infobloxopen/cni-infoblox

COPY . ${SRC}
WORKDIR ${SRC}

RUN go build -o bin/cni-infoblox-client ./daemon


FROM alpine:3.5

ENV SRC=/go/src/github.com/infobloxopen/cni-infoblox
COPY --from=builder ${SRC}/bin/cni-infoblox-client /usr/local/bin/cni-infoblox-client

ENTRYPOINT ["/usr/local/bin/cni-infoblox-client"]

ARG GIT_SHA
ARG BUILD_DATE

LABEL GIT_SHA=$GIT_SHA \
      BUILD_DATE=$BUILD_DATE
